// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
	"ui_font_weight": 500.0,
	"project_panel": {
		"default_width": 232.0,
		"hide_root": true,
		"show_diagnostics": "errors",
		"indent_size": 12.0,
		"entry_spacing": "standard",
		"dock": "left"
	},
	"git_panel": {
		"dock": "left",
		"sort_by_path": true
	},
	"cursor_shape": "underline",
	"ui_font_family": "Hack Nerd Font Mono",
	"buffer_font_family": "Hack Nerd Font Mono",
	"buffer_font_weight": 500.0,
	"auto_update_extensions": {
		"biome": false
	},
	"icon_theme": "Material Icon Theme",
	"features": {
		"edit_prediction_provider": "zed"
	},
	"base_keymap": "VSCode",
	"theme": "Kanagawa Dragon",
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"vim_mode": true,
	"ui_font_size": 14.0,
	"buffer_font_size": 14.0,
	"terminal": {
		"font_weight": 431.0,
		"minimum_contrast": 46.0,
		"font_size": 14.0,
		"font_family": "Hack Nerd Font Mono",
		"line_height": "standard",
		"shell": {
			"program": "zsh"
		}
	},
	"inlay_hints": {
		"enabled": true,
		"show_type_hints": false,
		"show_parameter_hints": false,
		"show_other_hints": true,
		"edit_debounce_ms": 700,
		"scroll_debounce_ms": 50
	},
	"tabs": {
		"file_icons": true,
		"git_status": true
	},
	"indent_guides": {
		"background_coloring": "indent_aware"
	},
	"language_servers": [
		"!typescript-language-server",
		"!eslint",
		"!prettier",
		"!phpactor",
		"intelephense",
		"...",
		"biome"
	],
	"file_types": {
		"po": ["po"]
	},
	"prettier": {
		"allowed": false
	},
	"lsp": {
		"tailwindcss-language-server": {
			"settings": {
				"classFunctions": ["cva", "cx"],
				"experimental": {
					"classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
				}
			}
		}
	},
	"languages": {
		"JavaScript": {
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"TypeScript": {
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"JSX": {
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		},
		"TSX": {
			"formatter": [
				{
					"code_action": "source.fixAll.biome"
				},
				{
					"code_action": "source.organizeImports.biome"
				},
				{
					"language_server": {
						"name": "biome"
					}
				}
			]
		}
	},
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	},
	"experimental.theme_overrides": {
		"renamed.background": "#FFFFFF20",
		"search.match_background": "#FFFFFF20",
		"ghost_element.background": "#00000010",
		"ghost_element.hover": "#00000099",
		"background.appearance": "blurred",
		"background": "#000000bb",
		"editor.background": "#00000010",
		"editor.gutter.background": "#0000001F",
		"title_bar.background": "#000000BB",
		"toolbar.background": "#00000000",
		"terminal.background": "#00000000",
		"status_bar.background": "#000000BB",
		"tab.active_background": "#000000",
		"tab.inactive_background": "#00000010",
		"tab_bar.background": "#00000010",
		"panel.background": "#00000000",
		"border": "#FFFFFF33",
		"border.variant": "#FFFFF33",
		"scrollbar.track.border": "#00000000",
		"scrollbar.track.background": "#00000000",
		"scrollbar.thumb.background": "#00000000",
		"scrollbar.thumb.border": "#FFFFFF90",
		"editor.active_line.background": "#00000000",
		"text.muted": "#cdcdcd",
		"text": "#efefef",
		"syntax": {
			"punctuation.delimiter": {
				"color": "#cdcdcd",
				"font_style": null,
				"font_weight": null
			}
		}
	}
}
